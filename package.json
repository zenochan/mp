{
  "name": "mp",
  "version": "1.1.0",
  "author": "Zeno",
  "description": "Zeno 的小程序开发包",
  "main": "./libs/index.js",
  "miniprogram": "libs",
  "scripts": {
    "open": "cli open --project $(pwd)"
  },
  "files": [
    "libs/",
    "libs/scss/",
    "sdk/",
    "README.md"
  ],
  "devDependencies": {
    "eslint": "^6.8.0",
    "@types/wechat-miniprogram": "^3.1.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-ts-base": "^1.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.0.0",
    "typescript": "^4.0.3"
  },
  "eslintConfig": {
    "extends": [
      "ts-base",
      "airbnb"
    ],
    "rules": {
      "prefer-destructuring": 1,
      "no-param-reassign": 1,
      "no-undef": 1,
      "prefer-rest-params": 1,
      "no-plusplus": 1,
      "eqeqeq": 1,
      "no-use-before-define": 1,
      "max-len": [
        2,
        120
      ],
      "no-tabs": 0,
      "no-multi-spaces": 0
    }
  }
}
