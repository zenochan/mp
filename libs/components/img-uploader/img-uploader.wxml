<div class="img-uploader">
  <div class="item" wx:for="{{urls}}" wx:key="{{index}}"
       catch:tap="view" data-urls="{{urls}}" data-url="{{item}}"
  >
    <image src="{{item + '?imageView2/0/w/200'}}" mode="aspectFill"></image>
    <image class="delete" src="imgs/delete.png"
           wx:if="{{!disabled}}" catch:tap="removeImage" data-index="{{index}}"
    ></image>
  </div>

  <div class="item" wx:for="{{uploading}}" wx:key="{{index}}">
    <image src="{{item}}" mode="aspectFill"></image>

    <div class="progress">

      <div class="circleProgress_wrapper">
        <div class="wrapper right">
          <div class="circleProgress rightcircle"></div>
        </div>
        <div class="wrapper left">
          <div class="circleProgress leftcircle"></div>
        </div>
      </div>
    </div>
  </div>

  <!--  add -->
  <div class="item add" catch:tap="chooseImage" wx:if="{{!disabled && count> urls.length && uploading.length == 0}}">
    <image src="imgs/upload.png" mode="widthFixed"></image>
    <div>{{text}}</div>
  </div>

  <div style="clear: both"></div>
</div>
